<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM 
"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
   <session-factory>
   <property name="hibernate.dialect">
     	org.hibernate.dialect.PostgreSQLDialect
   </property>
   <property name="hibernate.connection.driver_class">
      org.postgresql.Driver
   </property>

   <!-- Assume test is the database name -->
   <property name="hibernate.connection.url">
      jdbc:postgresql://localhost:5432/consultorio
   </property>
   <property name="hibernate.connection.username">
      postgres
   </property>
   <property name="hibernate.connection.password">
      123
   </property>
   
    <property name="connection_pool_size">1</property>

    <property name="hbm2ddl.auto">update</property>

    <property name="show_sql">true</property>

   <!-- List of Class mapping -->
 
    <mapping class="consultorio.entidad.Configuracion"/>
	<mapping class="consultorio.entidad.Doctor"/>
	<mapping class="consultorio.entidad.Funcionalidad"/>
	<mapping class="consultorio.entidad.Login"/>
	<mapping class="consultorio.entidad.Moneda"/>
	<mapping class="consultorio.entidad.Paciente"/>
	<mapping class="consultorio.entidad.Perfil"/>
	<mapping class="consultorio.entidad.Perfil_Funcionalidad"/>
	<mapping class="consultorio.entidad.Cambio"/>
	<mapping class="consultorio.entidad.Servicio"/>
	<mapping class="consultorio.entidad.Usuario"/>
	<mapping class="consultorio.entidad.Cita"/>
	
</session-factory>
</hibernate-configuration>